@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <meta charset="utf-8" />
        <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
        <meta name="viewport" content="width=device-width" />
        <title>Avenzo Facturación</title>
        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/css")
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <!--     Fonts and icons     -->
        <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
        <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
          
    </head>
    <body>
        <nav class="navbar navbar-primary navbar-transparent navbar-absolute">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/"></a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">                        
                        <li>
                            <a id="navRegister" style="cursor:pointer;">
                                <i class="material-icons">person_add</i> Registrase
                            </a>
                        </li >
                        <li>
                            <a id="navLogin" style="cursor:pointer;">
                                <i class="material-icons">fingerprint</i> Iniciar Sesion
                            </a>
                        </li>                        
                    </ul>
                </div>
            </div>
        </nav>
        <div class="wrapper wrapper-full-page">
            <div class="full-page login-page" >
                <!--class="full-page login-page" filter-color="black" data-image="~/Images/login.jpeg"      filter-color="black" data-image="../../Images/bg.jpg"-->
                <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " 02a94f-->
                <div class="content">
                    @RenderBody()                    
                </div>
                <footer class="footer">
                    <div class="container">
                        <p class="copyright text-center">
                            ©
                            <script>
                                document.write(new Date().getFullYear())
                            </script>
                            <a href="http://avenzo.mx">Avenzo</a>, Cristian Santiago Rosas
                        </p>
                    </div>
                </footer>
                <div class="full-page-background" style="/*background-image: url(../../Images/bg.jpg  )*/background:rgb(2, 169, 79); "></div>
            </div>
        </div>
        <script src="~/Scripts/moment.min.js"></script>
        <script src="~/Scripts/jquery.sharrre.js"></script>
        <script src="~/Scripts/jquery.tagsinput.js"></script>
        <script src="~/Scripts/jquery.datatables.js"></script>
        <script src="~/Scripts/perfect-scrollbar.jquery.min.js"></script>
        <script src="~/Scripts/bootstrap-notify.js"></script>
        <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
        <script src="~/Scripts/angular.js"></script>
        <script src="~/Scripts/angular-animate.js"></script>
        <script src="~/Scripts/material.min.js"></script>
        <script src="~/Scripts/material-dashboard.js"></script>
        <script src="~/Scripts/demo.js"></script>
        <script>
            $(document).ready(function () {
                $("#navRegister").click(function () {
                    var parent = $(this).parent();
                    $(".nav li").removeClass("active");
                    $(parent).addClass("active");                                    
                        $("#Card").fadeOut(500, function () {
                            $("#Card").load("/Login/FormularioRegistrar", function () {
                                window.history.pushState('forward', null, '/Login/Registrarse');                                
                                $("#success").fadeOut(500);
                                $("#error").fadeOut(500);
                                $("#Card").fadeIn(500);
                            });
                        });                        
                                       
                });
                $("#navLogin").click(function () {
                    if (!location.href.includes("Login/Index")) {
                        var parent = $(this).parent();
                        $(".nav li").removeClass("active");
                        $(parent).addClass("active");
                        $("#Card").fadeOut(500, function () {
                            $("#Card").load("/Login/FormularioLogin", function () {
                                window.history.pushState('forward', null, '/Login/Index');
                                $("#success").fadeOut(500);
                                $("#error").fadeOut(500);
                                $("#Card").fadeIn(500);
                                
                            });
                        });

                    }

                });

            });
        </script>
    </body>
</html>